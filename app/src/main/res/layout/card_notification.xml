<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    card_view:cardElevation="0dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@android:color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@android:color/white"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/pic_alert"
            android:src="@drawable/alert_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/topic_message"
            android:textSize="15sp"
            android:text="Name Product"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/pic_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/date_message"
            android:text="date"
            android:layout_toRightOf="@id/pic_alert"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topic_message"/>
        <TextView
            android:id="@+id/detail_message"
            android:text="detail"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pic_alert"/>

        <ImageButton
            android:id="@+id/option_notification"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_more_vert_black_24dp"
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="5dp"
            android:layout_below="@id/detail_message"
            android:background="@color/gray_background"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>