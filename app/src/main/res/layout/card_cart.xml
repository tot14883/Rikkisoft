<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@android:color/white"
    android:background="@android:color/white">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@android:color/white">

        <ImageView
            android:id="@+id/cart_product_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            />
       <TextView
           android:id="@+id/cart_product_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="15sp"
           android:textColor="@android:color/black"
           android:layout_marginStart="15dp"
           android:layout_marginTop="10dp"
           android:layout_toRightOf="@id/cart_product_img"/>
       <TextView
           android:id="@+id/cart_product_price"
           android:layout_below="@id/cart_product_title"
           android:layout_toRightOf="@id/cart_product_img"
           android:textSize="15sp"
           android:textColor="@android:color/black"

           android:layout_marginTop="10dp"
           android:layout_marginStart="15dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <ImageButton
           android:id="@+id/btn_minus"
           android:layout_marginTop="15dp"
           android:src="@drawable/ic_remove_black_24dp"
           android:background="@drawable/btn_plus"
           android:layout_width="30dp"
           android:layout_marginStart="15dp"
           android:layout_height="30dp"
           android:layout_toRightOf="@id/cart_product_img"
           android:layout_below="@id/cart_product_price"/>
       <EditText
           android:id="@+id/edit_number"
           android:layout_marginTop="15dp"
           android:layout_below="@id/cart_product_price"
           android:layout_toRightOf="@id/btn_minus"
           android:background="@color/gray_background"
           android:layout_width="20pt"
           android:lines="1"
           android:gravity="center"
           android:maxLines="1"
           android:editable="false"
           android:minLines="1"
           android:textSize="18sp"
           android:padding="2dp"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"
           android:layout_height="wrap_content"/>
       <ImageButton
           android:id="@+id/btn_plus"
           android:layout_marginTop="15dp"
           android:layout_toRightOf="@id/edit_number"
           android:layout_below="@id/cart_product_price"
           android:src="@drawable/ic_add_black_24dp"
           android:background="@drawable/btn_plus"
           android:layout_width="30dp"
           android:layout_height="30dp"/>
       <ImageButton
           android:layout_centerVertical="true"
           android:layout_margin="15dp"
           android:id="@+id/delete_cart_list"
           android:layout_alignParentEnd="true"
           android:background="@drawable/ic_delete_forever_black_24dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </RelativeLayout>
</androidx.cardview.widget.CardView>