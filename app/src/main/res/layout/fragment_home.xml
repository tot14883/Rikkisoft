<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent">
       <ImageView
            android:id="@+id/toolbar_show"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
        <TextView
            android:id="@+id/hello_name"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
             android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@android:color/white"
            android:text="Hello World"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/toolbar_pic"
            android:layout_width="60dp"
            android:layout_height="30dp"/>

        <EditText
            android:id="@+id/edit_balance"
            android:layout_marginTop="10dp"
            android:editable="false"
            android:padding="8dp"
            android:background="@drawable/edt_balance"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hello_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/green_text"/>
        <TextView
            android:text="@string/wallet_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hello_name"
            android:layout_marginTop="15dp"/>
        <AdapterViewFlipper
            android:id="@+id/adapterViewFlipper"
            app:layout_constraintTop_toBottomOf="@id/edit_balance"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp">

        </AdapterViewFlipper>

       <ImageButton
            android:id="@+id/img_btn_scan_n"
            android:background="@drawable/btn_scan_n"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@id/adapterViewFlipper"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/text_qr_code"
            app:layout_constraintTop_toBottomOf="@id/img_btn_scan_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:text="@string/qr_code_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
