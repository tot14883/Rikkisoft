<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".UI.Category.DetailCategoryProduct">
    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        style="?attr/actionButtonStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/action_btn_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_shopping_cart_black_2"/>
        <TextView
            android:id="@+id/cart_badge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|end|top"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/badge_background"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@android:color/white"
            android:text="0"
            android:textSize="10sp"/>
       <ImageButton
           android:id="@+id/btn_back_page"
           android:layout_gravity="center_vertical"
           android:background="@drawable/arrow_back_black_24dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
    </FrameLayout>
   <ImageView
       android:id="@+id/img_product_detail"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:src="@drawable/ic_image_black_24dp"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/toolbar" />
    <TextView
        android:id="@+id/name_product_detail"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/img_product_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/price_product_detail"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/name_product_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
     <ImageButton
         android:id="@+id/btn_minus"
         android:layout_marginTop="10dp"
         app:layout_constraintRight_toLeftOf="@id/edit_number"
         android:src="@drawable/ic_remove_black_24dp"
         app:layout_constraintTop_toBottomOf="@id/price_product_detail"
         android:background="@drawable/btn_plus"
         android:layout_width="35dp"
         android:layout_marginRight="10dp"
         android:layout_height="35dp"/>
    <EditText
        android:id="@+id/edit_number"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price_product_detail"
        android:background="@color/gray_background"
        android:layout_width="25pt"
        android:lines="1"
        android:gravity="center"
        android:maxLines="1"
        android:editable="false"
        android:minLines="1"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/btn_plus"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/edit_number"
        android:src="@drawable/ic_add_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/price_product_detail"
        android:background="@drawable/btn_plus"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_qecode_nav"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/img_qrcode"
        android:tint="@android:color/white"
        app:borderWidth="0dp"
        app:elevation="5dp"
        app:fabCustomSize="55dp"
        app:fabSize="auto"
        app:layout_constraintTop_toBottomOf="@id/edit_number"
        app:layout_constraintBottom_toTopOf="@+id/text_qrcode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="5dp"
        app:maxImageSize="25dp" />

    <TextView
        android:id="@+id/text_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/qr_code"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/fab_qecode_nav"
        app:layout_constraintBottom_toTopOf="@+id/text_cart_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
           android:id="@+id/text_cart_detail"
           android:textSize="15sp"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@id/text_qrcode"
           app:layout_constraintBottom_toTopOf="@id/btn_add_cart"
           android:background="@color/black_soft"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="left"
           android:padding="16dp"
           android:layout_marginBottom="10dp"
           android:textColor="@android:color/white"
           android:text="@string/show_dialog_cart"/>

    <TextView
        android:id="@+id/text_check_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:padding="10dp"
        android:text="@string/check_cart"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_cart"
        app:layout_constraintRight_toRightOf="@id/text_cart_detail"
        app:layout_constraintTop_toBottomOf="@+id/text_qrcode" />

    <Button
           android:id="@+id/btn_add_cart"
           android:background="@drawable/btn_signout"
           android:gravity="center"
           android:textAllCaps="false"
           android:layout_marginLeft="15sp"
           android:layout_marginRight="15dp"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@id/text_cart_detail"
           app:layout_constraintBottom_toTopOf="@id/btn_buy_right_away"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/add_to_your_cart"
           android:textColor="@color/colorPrimary"
           android:layout_marginBottom="10dp"
           android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_buy_right_away"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_red"
        android:gravity="center"
        android:text="@string/buy_right_away"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_add_cart" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>